<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/historico_margin_top"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/anomalias_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bt_swipe_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:background="@drawable/selector_swipe_testes_left" />

        <TextView
            android:id="@+id/teste_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_rede_movel_erro_big"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bt_swipe_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:background="@drawable/selector_swipe_testes_right" />
    </RelativeLayout>

    <!-- Date -->

    <TextView
        android:id="@+id/test_entry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12 mar 2014, 14:00"
        android:textColor="@color/color_light_grey_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mapview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    
           
                
                <ListView
	                android:id="@+id/list"
	                android:layout_width="match_parent"
	                android:layout_height="0dip"
	                android:layout_weight="1"
	                android:cacheColorHint="@android:color/transparent"
	                android:divider="@drawable/linha_separador"
	                android:overScrollMode="never"
	                android:clickable="true"
                />

    

            <!-- Map view -->

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" 
               />
   
        </LinearLayout>
    </RelativeLayout>

    <!-- Map fragment -->
    <!--
         <include
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        layout="@layout/map_fragment" />
    -->

</LinearLayout>