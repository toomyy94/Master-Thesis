<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >
    
    <RelativeLayout android:id="@+id/layoutHeader" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
        <ImageView android:id="@+id/headerImg"
                android:src="@drawable/header"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                </ImageView>
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/layoutHeaderBar" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutHeader">
        
        <ImageView android:id="@+id/headerImg"
			android:src="@drawable/cabecalhoheader"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</ImageView>
		
        <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProRegularTextView android:id="@+id/MenuBarInformation"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/app_results_details_header_pt"
			android:textSize="16dp"
			android:textColor="#ffffff"
			android:paddingLeft="10dp"
			android:layout_centerVertical="true"
			android:layout_alignLeft="@+id/headerImg">
		</PT.PTInov.ArQoSPocketEDP.UI.MyRiadProRegularTextView>
		
        <ImageView android:id="@+id/backImg"
			android:src="@drawable/back"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true">
		</ImageView>
        
	</RelativeLayout>
	
    <RelativeLayout android:id="@+id/layoutHeaderBarTest" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutHeaderBar">
        
       <ImageView android:id="@+id/headerTestBackground"
			android:src="@drawable/barracomseta"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>
		
       	<RelativeLayout android:id="@+id/layoutTestState" 
    		android:layout_width="wrap_content" 
   	 		android:layout_height="wrap_content"
   	 		android:layout_centerInParent="true">
    		
       	    <ImageView android:id="@+id/imgTestState"
				android:src="@drawable/ok"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true">
			</ImageView>
			
       	    <RelativeLayout android:id="@+id/layoutTestStateInfo" 
    			android:layout_width="wrap_content" 
   	 			android:layout_height="wrap_content"
   	 			android:layout_toRightOf="@+id/imgTestState"
   	 			android:layout_marginLeft="10dp">
   	 			
       	        <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProBoldTextView
	        		android:id="@+id/logtext1"
      				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text="Description"
    				android:textColor="#4c4c4e"
    				android:textSize="19dip" />
	    
	    		<PT.PTInov.ArQoSPocketEDP.UI.MyArialTextView
	        		android:id="@+id/logtext2"
					android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text="00/00/0000 00:00:00"
    				android:layout_below="@+id/logtext1"
    				android:textColor="#666666"
    				android:textSize="15dip"
    				android:textStyle="bold" />
       	        
   	 		</RelativeLayout>
    	
		</RelativeLayout>
        
	</RelativeLayout>
	
    <RelativeLayout android:id="@+id/layoutResultTest" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/layoutHeaderBarTest">
       	
        <RelativeLayout android:id="@+id/layoutResultLine1" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">
       	    
            <ImageView android:id="@+id/imgTestStateLocation"
				android:src="@drawable/ok"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:paddingLeft="20dp"
				android:paddingRight="20dp">
			</ImageView>
			
            <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProBoldTextView
				android:id="@+id/textTestStateLocation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Localização"
				android:textColor="#4c4c4e"
				android:textSize="19dip"
				android:layout_toRightOf="@+id/imgTestStateLocation"
				android:paddingTop="15dp"
				android:paddingBottom="15dp"/>
            
            <ImageView android:id="@+id/line1"
				android:src="@drawable/resultline"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@+id/textTestStateLocation">
			</ImageView>
       	    
		</RelativeLayout>
		
        <RelativeLayout android:id="@+id/layoutResultLine2" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/layoutResultLine1">
            
            <ImageView android:id="@+id/imgTestStateMobileConnection"
				android:src="@drawable/ok"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:paddingLeft="20dp"
				android:paddingRight="20dp">
			</ImageView>
			
            <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProBoldTextView
				android:id="@+id/textTestStateMobileConnection"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ligação Mobile"
				android:textColor="#4c4c4e"
				android:textSize="19dip"
				android:layout_toRightOf="@+id/imgTestStateMobileConnection"
				android:paddingTop="15dp"
				android:paddingBottom="15dp"/>
            
            <ImageView android:id="@+id/line2"
				android:src="@drawable/resultline"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@+id/textTestStateMobileConnection">
			</ImageView>
       	    
		</RelativeLayout>
		
        <RelativeLayout android:id="@+id/layoutResultLine3" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/layoutResultLine2">
            
            <ImageView android:id="@+id/imgTestStateTestCall"
				android:src="@drawable/ok"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:paddingLeft="20dp"
				android:paddingRight="20dp">
			</ImageView>
			
            <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProBoldTextView
				android:id="@+id/textTestStateTestCall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Teste de chamada"
				android:textColor="#4c4c4e"
				android:textSize="19dip"
				android:layout_toRightOf="@+id/imgTestStateTestCall"
				android:paddingTop="15dp"
				android:paddingBottom="15dp"/>
       	    
            <ImageView android:id="@+id/line3"
				android:src="@drawable/resultline"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@+id/textTestStateTestCall">
			</ImageView>
            
		</RelativeLayout>
		
        <RelativeLayout android:id="@+id/layoutResultLine4" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/layoutResultLine3">
            
            <ImageView android:id="@+id/imgTestStateTestSMS"
				android:src="@drawable/ok"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:paddingLeft="20dp"
				android:paddingRight="20dp">
			</ImageView>
			
            <PT.PTInov.ArQoSPocketEDP.UI.MyRiadProBoldTextView
				android:id="@+id/textTestStateTestSMS"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Envio do teste"
				android:textColor="#4c4c4e"
				android:textSize="19dip"
				android:layout_toRightOf="@+id/imgTestStateTestSMS"
				android:paddingTop="15dp"
				android:paddingBottom="15dp"/>
            
            <ImageView android:id="@+id/line4"
				android:src="@drawable/resultline"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@+id/textTestStateTestSMS">
			</ImageView>
       	    
		</RelativeLayout>
	
    </RelativeLayout>
    
     <RelativeLayout 
        android:id="@+id/layoutMoreResultTest" 
		android:layout_width="wrap_content" 
    	android:layout_height="fill_parent"
    	android:layout_below="@+id/layoutResultTest"
    	android:layout_above="@+id/layoutLogoPT"
    	android:layout_centerHorizontal="true">
        
         <ImageView android:id="@+id/botaoMaisInfo"
			android:src="@drawable/maisinformacao"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_centerInParent="true">
		</ImageView>
        
	</RelativeLayout>
    
   <RelativeLayout android:id="@+id/layoutLogoPT" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true">
        
        <ImageView android:id="@+id/barraBaixo"
			android:src="@drawable/barraback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>

        
	</RelativeLayout>
    

</RelativeLayout>