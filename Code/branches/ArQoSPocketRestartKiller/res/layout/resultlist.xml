<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >
    
    <RelativeLayout android:id="@+id/layoutHeader" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
        <ImageView android:id="@+id/headerImg"
                android:src="@drawable/header"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                </ImageView>
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/layoutHeaderBar" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutHeader">
        
        <ImageView android:id="@+id/headerImg"
			android:src="@drawable/barraback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>
                
        <TextView android:id="@+id/MenuBarInformation"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/app_results_header_pt"
			android:textSize="14dp"
			android:paddingLeft="10dp"
			android:layout_centerVertical="true"
			android:layout_below="@+id/layoutDateTimeInformation">
		</TextView>
		
        <ImageView android:id="@+id/backImg"
			android:src="@drawable/back"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true">
		</ImageView>
        
	</RelativeLayout>
    
    
    <RelativeLayout android:id="@+id/layouListView" 
    android:layout_width="fill_parent" 
    android:layout_height="380dp"
    android:layout_below="@+id/layoutHeaderBar">
        
    	<ListView
        	android:id="@+id/resutlTestlist"
        	android:layout_width="wrap_content"
        	android:layout_height="380dp"
        	android:cacheColorHint="@android:color/transparent"
        	android:layout_below="@+id/layouListView">
    	</ListView>
    	
    </RelativeLayout>  
    
    
    <RelativeLayout android:id="@+id/layoutLogoPT" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true">
        
        <ImageView android:id="@+id/barraBaixo"
			android:src="@drawable/barraback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>

        <ImageView android:id="@+id/logoPTn"
                android:src="@drawable/ptin"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutLogoPT"
                android:layout_centerInParent="true">
                </ImageView>
        
	</RelativeLayout>
    

</RelativeLayout>