<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFFFF"
	android:paddingLeft="2px">
	
	<RelativeLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:layout_alignParentTop="true" android:paddingTop="25dip">
		
		<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		
			<LinearLayout android:orientation="horizontal"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_width="fill_parent">
		
				<ImageView android:id="@+id/arqoslogo" android:layout_width="wrap_content"
				android:layout_height="fill_parent" android:src="@drawable/arqoslogo"/>
			
			</LinearLayout>
			
			<View android:layout_height="50dip" android:background="#00000000"
			android:layout_width="fill_parent" />
			
			<LinearLayout android:orientation="vertical"
			android:layout_height="fill_parent" android:layout_width="fill_parent" android:paddingLeft="10dip">
				
				<LinearLayout android:orientation="horizontal"
				android:gravity="left" android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			
					<TextView android:textSize="30px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Último teste: "
					android:textColor="#000" android:textStyle="bold"/>
		
					<TextView android:textSize="25px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="NA" android:id="@+id/lasttest"
					android:textColor="#000" android:textStyle="italic" />
					
				</LinearLayout>
				
				<LinearLayout android:orientation="horizontal"
				android:gravity="left" android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			
					<TextView android:textSize="30px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Estado do último teste: "
					android:textColor="#000" android:textStyle="bold"/>
		
					<TextView android:textSize="25px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="NA" android:id="@+id/rlasttest"
					android:textColor="#000" android:textStyle="italic"/>
					
				</LinearLayout>
				
				<LinearLayout android:orientation="horizontal"
				android:gravity="left" android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			
					<TextView android:textSize="30px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Próximo teste: "
					android:textColor="#000" android:textStyle="bold"/>
		
					<TextView android:textSize="25px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="NA" android:id="@+id/nexttest"
					android:textColor="#000" android:textStyle="italic"/>
					
				</LinearLayout>
				
				<LinearLayout android:orientation="horizontal"
				android:gravity="left" android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			
					<TextView android:textSize="30px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Falhas: "
					android:textColor="#000" android:textStyle="bold"/>
		
					<TextView android:textSize="25px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="0" android:id="@+id/nfalhas"
					android:textColor="#000" android:textStyle="italic"/>
					
				</LinearLayout>
				
				<LinearLayout android:orientation="horizontal"
				android:gravity="left" android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			
					<TextView android:textSize="30px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Estado actual: "
					android:textColor="#000" android:textStyle="bold"/>
		
					<TextView android:textSize="25px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Parado" android:id="@+id/estado"
					android:textColor="#000" android:textStyle="italic"/>
					
				</LinearLayout>
				
			</LinearLayout>
		
		</LinearLayout>
		
	</RelativeLayout>
	
		
	<RelativeLayout android:orientation="vertical"
		android:layout_height="150px" android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" android:paddingBottom="10dip">
		
		<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		
			<LinearLayout android:orientation="horizontal"
				android:gravity="center" android:layout_height="50px"
				android:layout_width="fill_parent">
				
				<ImageView android:id="@+id/ptinlogo" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/ptinlogo" android:paddingBottom="5dip"/>
				
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:gravity="center" android:layout_height="fill_parent"
				android:layout_width="fill_parent">
				
					<ToggleButton android:textOn="Parar Testes"
					android:textOff="Iniciar Testes" android:id="@+id/servicetoggle"
					android:layout_width="230dip" android:layout_height="wrap_content">
					</ToggleButton>
					
			</LinearLayout>
				
		</LinearLayout>
			
	</RelativeLayout>
	
</RelativeLayout>
