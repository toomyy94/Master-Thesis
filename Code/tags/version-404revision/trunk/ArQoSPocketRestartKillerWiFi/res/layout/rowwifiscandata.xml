<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/NetworkName"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:textSize="16dp"
    	android:text="SSID" />
    
    <TextView android:id="@+id/headerBSSID"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="25dp"
    	android:textSize="12dp"
    	android:text="BSSID : "
    	android:textStyle="bold"
    	android:layout_below="@+id/NetworkName" />
    
    <TextView android:id="@+id/resultBSSID"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
    	android:textSize="12dp"
    	android:text="12:12:15:35:a5"
    	android:layout_alignBaseline="@+id/headerBSSID"
    	android:layout_toRightOf="@+id/headerBSSID" />
    
    <RelativeLayout android:id="@+id/capabilitieslayout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/headerBSSID">
    
    	<TextView android:id="@+id/headercapabilities"
      		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingLeft="25dp"
    		android:textSize="12dp"
    		android:text="Autenticação : "
    		android:textStyle="bold" />
    
    	<TextView android:id="@+id/resultcapabilities"
      		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingLeft="5dp"
    		android:textSize="12dp"
    		android:text="NA"
    		android:layout_alignBaseline="@+id/headercapabilities"
    		android:layout_toRightOf="@+id/headercapabilities" />
    
    </RelativeLayout>
    
    <TextView android:id="@+id/headerfrequency"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="25dp"
    	android:textSize="12dp"
    	android:text="Frequência : "
    	android:textStyle="bold"
    	android:layout_below="@+id/capabilitieslayout" />
    
    <TextView android:id="@+id/resultfrequency"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
    	android:textSize="12dp"
    	android:text="NA"
    	android:layout_alignBaseline="@+id/headerfrequency"
    	android:layout_toRightOf="@+id/headerfrequency" />
    
    <TextView android:id="@+id/resultfrequencyMedida"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
    	android:textSize="12dp"
    	android:text="MHz"
    	android:layout_alignBaseline="@+id/resultfrequency"
    	android:layout_toRightOf="@+id/resultfrequency" />
    
    <TextView android:id="@+id/headerSignalLevel"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="25dp"
    	android:textSize="12dp"
    	android:text="Força de sinal : "
    	android:textStyle="bold"
    	android:layout_below="@+id/headerfrequency" />
    
    <TextView android:id="@+id/resultSignalLevel"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
    	android:textSize="12dp"
    	android:text="NA"
    	android:layout_alignBaseline="@+id/headerSignalLevel"
    	android:layout_toRightOf="@+id/headerSignalLevel" />
    
    <TextView android:id="@+id/resultSignalLevelMedida"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="12dp"
    	android:paddingLeft="5dp"
    	android:text="dBm"
    	android:layout_alignBaseline="@+id/resultSignalLevel"
    	android:layout_toRightOf="@+id/resultSignalLevel" />
    
    <TextView android:id="@+id/headerChannel"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="25dp"
    	android:textSize="12dp"
    	android:text="Canal : "
    	android:textStyle="bold"
    	android:layout_below="@+id/headerSignalLevel" />
    
     <TextView android:id="@+id/resultChannel"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingLeft="5dp"
    	android:textSize="12dp"
    	android:text="NA"
    	android:layout_alignBaseline="@+id/headerChannel"
    	android:layout_toRightOf="@+id/headerChannel" />
    

</RelativeLayout>