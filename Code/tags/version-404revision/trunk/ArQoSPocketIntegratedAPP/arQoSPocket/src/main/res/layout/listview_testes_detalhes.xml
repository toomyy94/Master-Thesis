<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutLinhaTipdetalhes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector_testes" >

    <ImageView
        android:id="@+id/image_Percent_deta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/falhado_default" />

    <TextView
        android:id="@+id/text_percent_deta"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="0%" />

    <ImageView
        android:id="@+id/imageState_deta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:src="@drawable/icon_inativo"
         />

    <TextView
        android:id="@+id/nome_teste_deta"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        />

        <!-- <ImageView
            android:id="@+id/imagebutton_deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/bot_more"
            /> -->
            
        <ImageView
	        android:id="@+id/imagebutton_deta"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:layout_gravity="right|center_vertical"
        />

</LinearLayout>