<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:paddingLeft="10dp"   
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:minHeight="70dp"
    android:weightSum="6" >

    <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center" >
    
	    <!-- <ImageView
	        android:id="@+id/img_historico_teste_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:src="@drawable/teste_concluido_100" />   -->
	        
	        <TextView
            android:id="@+id/task_percentagem"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/concluido_100"
            android:text="100%"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />
	          
    </LinearLayout>
    
    
    <!-- Space -->
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.15" />
    
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_historico_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_light_grey_text" />

    </RelativeLayout>
    
    
<!-- Space -->
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="0.15" />

    <!-- <ImageView
        android:id="@+id/img_historico_anomalias_details"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"        
        android:background="@drawable/bot_swipe_more_right" /> -->
    
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|right"
        android:orientation="vertical" >
    
	    <ImageView
	        android:id="@+id/img_historico_task_details"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:src="@drawable/bot_more_teste_hist" />
	    
	    <TextView
            android:id="@+id/tv_historico_teste_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01"
            android:textColor="@android:color/white"
            android:textStyle="bold" />  
    </LinearLayout>

</LinearLayout>