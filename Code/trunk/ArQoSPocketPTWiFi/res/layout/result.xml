<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >
    
    <RelativeLayout android:id="@+id/layoutHeader" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
        <ImageView android:id="@+id/headerImg"
                android:src="@drawable/header"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                </ImageView>
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/layoutHeaderBar" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/layoutHeader">
        
        <ImageView android:id="@+id/headerImg"
			android:src="@drawable/barraback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>
                
        <TextView android:id="@+id/MenuBarInformation"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="ArQoS Pocket > Resultados"
			android:textSize="14dp"
			android:paddingLeft="10dp"
			android:layout_centerVertical="true"
			android:layout_below="@+id/layoutDateTimeInformation">
		</TextView>
		
        <ImageView android:id="@+id/backImg"
			android:src="@drawable/back"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true">
		</ImageView>
        
	</RelativeLayout>
	
    <RelativeLayout android:id="@+id/layoutHeaderBarTest" 
    android:layout_width="fill_parent" 
    android:layout_height="50dp"
    android:layout_below="@+id/layoutHeaderBar">
        
         <TextView android:id="@+id/logtext1"
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10px"
    	android:layout_marginBottom="2px"
    	android:layout_marginLeft="3px"
    	android:layout_marginRight="3px"
    	android:paddingRight="10px"
    	android:paddingLeft="20px"
    	android:textSize="16dip"
    	android:text="Test Test" />
	
      <ImageView android:id="@+id/stateImg"
		android:src="@drawable/ok"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="35px"
    	android:layout_marginRight="15px">
	</ImageView>
 
      <TextView android:id="@+id/logtext2"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/logtext1"
    	android:layout_marginTop="3px"
    	android:layout_marginBottom="5px"
    	android:layout_marginLeft="3px"
    	android:layout_marginRight="3px"
    	android:paddingRight="10px"
    	android:paddingLeft="20px"
    	android:textSize="11dip"
    	android:textStyle="bold"
    	android:text="00-00-0000  00:00:00" />
        
	</RelativeLayout>
	
    <RelativeLayout android:id="@+id/layoutspace" 
    android:layout_width="fill_parent" 
    android:layout_height="15dp"
    android:layout_below="@+id/layoutHeaderBarTest">
      
        <ImageView android:id="@+id/limitLineStartButton"
                android:src="@drawable/linha"
                android:layout_width="280dp" 
                android:paddingTop="13dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layoutspace">
		</ImageView>
        
	</RelativeLayout>
    
    
    <RelativeLayout android:id="@+id/layouListView" 
    android:layout_width="fill_parent" 
    android:layout_height="315dp"
    android:layout_below="@+id/layoutspace">
      
         <TextView android:id="@+id/MenuLocalizacao"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Localização"
			android:textSize="11dp"
			android:paddingLeft="15dp"
			android:paddingTop="15dp"
			android:textStyle="bold"
			android:layout_below="@+id/layouListView">
		</TextView>
		
         <TextView android:id="@+id/headerLatitude"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Latitude :"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="5dp"
			android:layout_below="@+id/MenuLocalizacao">
		</TextView>
		
         <TextView android:id="@+id/resultLatitude"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="0"
			android:textSize="14dp"
			android:paddingLeft="5dp"
			android:layout_alignBaseline="@+id/headerLatitude"
			android:layout_toRightOf="@+id/headerLatitude">
		</TextView>
		
         <TextView android:id="@+id/headerLongitude"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Longitude :"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:layout_below="@+id/headerLatitude">
		</TextView>
		
         <TextView android:id="@+id/resultLongitude"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="0"
			android:textSize="14dp"
			android:paddingLeft="5dp"
			android:layout_alignBaseline="@+id/headerLongitude"
			android:layout_toRightOf="@+id/headerLongitude">
		</TextView>
		
         
		
         <TextView android:id="@+id/MenuDetalhes"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Detalhes"
			android:textSize="11dp"
			android:paddingLeft="15dp"
			android:paddingTop="15dp"
			android:textStyle="bold"
			android:layout_below="@+id/headerLongitude">
		</TextView>
		
         <TextView android:id="@+id/headerConnectPTWIFI"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Ligação à PT WiFi"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="5dp"
			android:layout_below="@+id/MenuDetalhes">
		</TextView>
		
         <ImageView android:id="@+id/resultConnectPTWIFI"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/MenuDetalhes"
			android:layout_alignParentRight="true">
		</ImageView>
		
         <TextView android:id="@+id/headerAuthPTWIFI"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Autenticação na PT WiFi"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:layout_below="@+id/headerConnectPTWIFI">
		</TextView>
		
         <ImageView android:id="@+id/resultAuthPTWIFI"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/headerConnectPTWIFI"
			android:layout_alignParentRight="true"
			android:paddingTop="10dp">
		</ImageView>
		
         <TextView android:id="@+id/headerPing"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Teste de Ping"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:layout_below="@+id/headerAuthPTWIFI">
		</TextView>
		
         <ImageView android:id="@+id/resultPing"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/headerAuthPTWIFI"
			android:layout_alignParentRight="true"
			android:paddingTop="10dp">
		</ImageView>
		
         <TextView android:id="@+id/headerDownload"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Teste de Donwload"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:layout_below="@+id/headerPing">
		</TextView>
		
         <ImageView android:id="@+id/resultDownload"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/headerPing"
			android:layout_alignParentRight="true"
			android:paddingTop="10dp">
		</ImageView>
		
         <TextView android:id="@+id/headerUpload"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Teste de Upload"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:layout_below="@+id/headerDownload">
		</TextView>
		
         <ImageView android:id="@+id/resultUpload"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/headerDownload"
			android:layout_alignParentRight="true"
			android:paddingTop="10dp">
		</ImageView>
		
         <TextView android:id="@+id/headerSended"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Enviado para o servidor"
			android:textSize="14dp"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:layout_below="@+id/headerUpload">
		</TextView>
		
         <ImageView android:id="@+id/resultSended"
			android:src="@drawable/ok"
			android:layout_width="30dp" 
			android:layout_height="30dp"
			android:paddingRight="10dp"
			android:layout_alignBaseline="@+id/headerUpload"
			android:layout_alignParentRight="true"
			android:paddingTop="10dp">
		</ImageView>
		
         <TextView android:id="@+id/moredetails"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/mais_detalhes"
			android:textSize="15dp"
			android:paddingLeft="15dp"
			android:paddingTop="7dp"
			android:textStyle="bold"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/headerSended">
		</TextView>
        
    	
    </RelativeLayout>  
    
    
    <RelativeLayout android:id="@+id/layoutLogoPT" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true">
        
        <ImageView android:id="@+id/barraBaixo"
			android:src="@drawable/barraback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>

        <ImageView android:id="@+id/logoPTn"
                android:src="@drawable/ptin"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutLogoPT"
                android:layout_centerInParent="true">
                </ImageView>
        
	</RelativeLayout>
    

</RelativeLayout>
