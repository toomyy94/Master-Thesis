<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Listview_min_height"
        android:orientation="horizontal"
        android:tag="back" >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Listview_min_height"
        android:tag="front" >
<!-- colar aqui -->

        <LinearLayout
            android:id="@+id/schedule_item_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Listview_min_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_selector_testes"
            android:gravity="center_vertical"
            android:minHeight="70dp"
            android:weightSum="7" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img_historico_anomalias_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_menu_voz" />
            </LinearLayout>

            <!-- Space -->

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.15" />

            <TextView
                android:id="@+id/tv_historico_anomalias_type"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/anomaly_category_messaging"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Space -->

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

            <TextView
                android:id="@+id/tv_historico_anomalias_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:gravity="center_vertical|center_horizontal"
                android:text="14 fev 2014, 18:45"
                android:textColor="@android:color/white" >
            </TextView>

            <!-- Space -->

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="right" />

            <!--
         <ImageView
        android:id="@+id/img_historico_anomalias_details"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"        
        android:background="@drawable/bot_swipe_more_right" />
            -->

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right" >

                <ImageView
                    android:id="@+id/img_historico_anomalias_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bot_more_teste" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>