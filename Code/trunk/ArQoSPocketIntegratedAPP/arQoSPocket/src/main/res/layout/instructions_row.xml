<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/global_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/global_margin" >

    
    <RelativeLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/move_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_testes" />

        <TextView
	        android:id="@+id/row_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/move_type_icon"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
	        android:text="@string/all_tests"
	        android:textSize="@dimen/primary_text_size" >
	    </TextView>

    </RelativeLayout>

