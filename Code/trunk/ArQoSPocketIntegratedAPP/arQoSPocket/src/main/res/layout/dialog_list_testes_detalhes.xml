<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutLinhaTipdetalhes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clickable="true"
    android:minHeight="70dp"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="70dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_Percent_deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/falhado_100" />

        <TextView
            android:id="@+id/text_percent_deta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="0%"
            android:textStyle="bold"
            android:textColor="@color/color_red_unavailable"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/imageState_deta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:src="@drawable/icon_inativo" />

        <!-- <TextView
            android:id="@+id/nome_teste_deta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:text="Task 1 integer"
            android:textColor="@color/color_red_unavailable"
            android:textSize="@dimen/text_size_large" /> -->

        <ImageView
            android:id="@+id/imagebutton_deta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:clickable="true" />
    </LinearLayout>

    <TextView
            android:id="@+id/nome_teste_deta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:drawableBottom="@drawable/linha_separador_open"
            android:drawablePadding="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_red_unavailable"
            android:textSize="@dimen/text_size_large" />
    
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/linha_separador_open" />

</LinearLayout>