<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SlidingMenuText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_branding</item>
        <item name="android:layout_marginLeft">@dimen/sliding_menu_item_innner_padding</item>
    </style>
    
        <style name="SlidingMenuTextSmall">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_branding</item>
        <item name="android:layout_marginLeft">@dimen/sliding_menu_item_innner_padding_small</item>
    </style>

    <style name="SlidingMenuIcon">
        <item name="android:layout_height">@dimen/sliding_menu_item_icon</item>
        <item name="android:layout_width">@dimen/sliding_menu_item_icon</item>
        <item name="android:layout_marginLeft">@dimen/sliding_menu_item_outer_padding</item>
        <item name="android:layout_marginRight">@dimen/sliding_menu_item_outer_padding</item>
    </style>
    
    <style name="SlidingMenuIconSmall">
        <item name="android:layout_height">@dimen/sliding_menu_item_icon_small</item>
        <item name="android:layout_width">@dimen/sliding_menu_item_icon_small</item>
        <item name="android:layout_marginLeft">@dimen/sliding_menu_item_outer_padding</item>
    </style>

    <style name="SlidingMenuHolder">
        <item name="android:layout_height">@dimen/sliding_menu_item_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/sl_sliding_menu_item</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>