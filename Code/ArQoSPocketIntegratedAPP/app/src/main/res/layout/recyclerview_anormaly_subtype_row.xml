<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recycler_view_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"   
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/numlistViewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/global_margin"
        android:textColor="@drawable/text_abtanomalias"
        android:text="01" />

    <TextView
        android:id="@+id/textlistViewTip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@drawable/text_abtanomalias"
        android:text="@string/anomaly_type_dropped_call" />
<ImageView
        android:id="@+id/imagelistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_gravity="center"
        android:padding="@dimen/global_margin"
        android:src="@mipmap/icon_menu_voz"
        android:visibility="invisible" />

</LinearLayout>