<!-- <?xml version="1.0" encoding="utf-8"?> -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/historic_margin_top"
    android:background="@mipmap/main_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RelativeLayout
        android:id="@+id/anomalias_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/historic_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_swipe_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/tit_lista_en" />

        <ImageView
            android:id="@+id/bt_swipe_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bot_swipe_map"
            android:clickable="true" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anomalias_header_layout"
        android:layout_margin="@dimen/historic_margin_top"
        android:entries="@array/anomalias"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:prompt="@string/anomaly_type"
        android:spinnerMode="dialog"
        android:textAllCaps="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_below="@id/spinner_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>