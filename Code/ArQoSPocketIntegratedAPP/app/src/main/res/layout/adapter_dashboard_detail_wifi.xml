<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

    <TextView
        android:id="@+id/adapter_dashboard_detail_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/adapter_dashboard_detail_value"
        android:layout_toStartOf="@+id/adapter_dashboard_detail_value"
        android:text="@string/bit_error_rate"
        android:textColor="#B8C6C8"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/adapter_dashboard_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textColor="#B8C6C8"
        android:textSize="18sp"/>

</RelativeLayout>