<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearLayoutLinhaTipdetalhes"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector_testes"
              android:gravity="center_vertical"
              android:minHeight="70dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_Percent_deta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:src="@mipmap/falhado_default"/>

    <TextView
        android:id="@+id/text_percent_deta"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="0%"/>

    <TextView
        android:id="@+id/nome_teste_deta"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Play"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imagebutton_deta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"/>

</LinearLayout>