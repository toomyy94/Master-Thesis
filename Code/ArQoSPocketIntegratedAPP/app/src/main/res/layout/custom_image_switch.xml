<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/global_margin"
        android:paddingRight="@dimen/global_margin"
        android:src="@mipmap/icon_erro"/>

    <TextView
        android:id="@+id/tv_state_text"
        android:textColor="@color/color_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_connected"/>

    <Switch
        android:id="@+id/radio_connection_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/icon"
        android:paddingRight="@dimen/global_margin"
        android:textColor="@color/color_radio"/>
</LinearLayout>