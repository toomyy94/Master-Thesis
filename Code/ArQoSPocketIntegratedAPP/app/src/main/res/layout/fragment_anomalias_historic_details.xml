<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/historic_margin_top"
              android:background="@mipmap/main_background"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/anomalias_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_swipe_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_swipe_anomalias_left"
            android:clickable="true"/>

        <TextView
            android:id="@+id/anomalias_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_menu_internet"
            android:text="@string/anomaly_category_internet"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/bt_swipe_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_swipe_anomalias_right"
            android:clickable="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12 mar 2014, 14:00"
        android:textColor="@color/color_light_grey_text"/>

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/historic_margin_separator_small"
        android:layout_marginTop="@dimen/historic_margin_separator_large"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/linha_separador"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/details_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/details_separator_height"
                android:orientation="horizontal"
                android:padding="@dimen/historic_margin_separator_medium"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/failure_type"
                    android:textColor="@color/color_light_grey_text"
                    android:textSize="@dimen/primary_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_type"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="4dp"
                    android:text=""
                    android:textColor="@color/color_light_grey_text"
                    android:textSize="@dimen/tertiary_text_size"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/linha_separador"/>

        <LinearLayout
            android:id="@+id/details_local_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/details_separator_height"
            android:orientation="horizontal"
            android:padding="@dimen/historic_margin_separator_medium"
            android:weightSum="3">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/location_info"
                android:textColor="@color/color_light_grey_text"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/details_local"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:paddingLeft="4dp"
                android:text=""
                android:textColor="@color/color_light_grey_text"
                android:textSize="@dimen/tertiary_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/linha_separador"/>"

        <LinearLayout
            android:id="@+id/details_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/historic_margin_separator_medium"
            android:layout_marginRight="@dimen/historic_margin_separator_medium"
            android:layout_marginTop="@dimen/historic_margin_separator_small"
            android:minHeight="@dimen/details_separator_height"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/feedback"
                android:textColor="@color/color_light_grey_text"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/details_feedback"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:paddingLeft="4dp"
                android:text=""
                android:textColor="@color/color_light_grey_text"
                android:textSize="@dimen/tertiary_text_size"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Map view -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>